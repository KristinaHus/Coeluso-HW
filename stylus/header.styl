.navbar-default
  padding 55px 0
  margin 0
  background transparent
  border none
  @media (min-width: 768px)
    .navbar-toggle
      display block
      border none

.navbar-default .navbar-toggle .icon-bar
    background blue-text

.navbar-default .navbar-brand
  color white
  font-size 30px
  font-weight 700
  &:before
    content " "
    background url("../img/logo.svg") no-repeat
    width 83px
    height 67px
    margin 0 10px 0 0
    display flex


