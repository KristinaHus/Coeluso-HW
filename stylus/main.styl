@import url(https://fonts.googleapis.com/css?family=Montserrat:400,700);

@require reset
@require variables
@require mixins
@require header
@require default-classes

body
  background: linear-gradient(to bottom, rgba(11,35,69,1) 0%,rgba(9,29,57,1) 55%,rgba(0,0,0,1) 100%);


.welcome
  margin 15% 0 5% auto
  h1
    margin 0
    font-size 48px
    font-weight 400
  p
    margin 15px auto
    padding 0
    font-size 18px
    font-weight 400
    a
      margin 35px auto
      font-size 14px
      font-weight 700

.screenshots
  background url("../img/diagramm.svg") no-repeat
  img
    width 100%
    transition(all 0.3s ease-in-out)
    &:hover
      transform(scale(1.3))

.description
  margin 10% auto

.headphones
  display flex
  justify-content flex-end

.features
  text-align center
  .container
    overflow hidden
  h3
    color white
  .row
    position relative
  .features-content
    margin-top 15%
    .phone
      margin 1% auto 10% auto
  li
    padding 1% 3%
    h4
      color white
  .elips
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    margin auto
    &:after
      content " "
      background url("../img/elips.png") no-repeat center
      display block
      width 790px
      height 125px
      margin auto
      position relative
      bottom 60px
    @media (max-width 991px)
      left 50%
      margin 0
    img
      position relative
      z-index 99
      transition(all 0.2s ease-in-out)
      box-shadow(0 0 300px -20px #000)
      &:hover
        transform(translate(0, -50px))


  .speaker:before,
  .activity:before,
  .headphones-icon:before,
  .cd:before
    content " "
    display flex
    margin-bottom 15px

  .speaker:before
    background url("../img/speaker.svg") no-repeat
    width 54px
    height 54px
  .activity:before
    background url("../img/activity.svg") no-repeat
    width 55px
    height 40px
  .headphones-icon:before
    background url("../img/headphones-icone.svg") no-repeat
    width 55px
    height 52px
  .cd:before
    background url("../img/cd.svg") no-repeat
    width 47px
    height 47px

.info
  margin 10% auto
  .container
    overflow hidden
  h3
    color white
    margin 60px auto
  .info-text
    padding 8% 9% 0 2%
    span:before
      content " "
      background url("../img/power-icon.svg") no-repeat
      width 50px
      height 51px
      display flex

.carousel:before
  content " "
  background #0a2345
  opacity 0.25
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  display block

.carousel
  .carousel-indicators
    margin-bottom 3%
  .carousel-caption
    flex-direction column
    height 100%
    justify-content space-around
    h4
      padding 0 5%
      @media (max-width 1024px)
        font-size: 17px;
        line-height: 27px;
    p
      color #66778e
      span
        color #213a61
      img
        border-radius(50%)
        margin 0 15px 0

.discover
  width 84%
  margin auto
  .column
    flex-direction column
    .jumbotron
      margin auto
      h3
        color white
  .discover-images
    display flex
    align-items center
    justify-content center
    position relative
    min-height 800px
    .first-img,
    .second-img,
    .third-img
      position absolute
      top 0
    .first-img
      left 0
      &:hover
        transform(scale(1.1), translate(500px, 0))
    .second-img
      left 0
      right 0
      margin 7% auto 0 auto
      z-index 9
    .third-img
      right 0
  .transparent-btn
    margin  0 0 125px 0


.footer
  .container
    border-top 1px solid rgba(46, 102, 178, 0.25);
  li
    padding 0 10px
    a
      color #14396a
      font-weight 700
  p
    color #14396a
    font-weight 700
    padding 0 10px
  .footer-content
    padding 50px 0 90px 0